{
  // ============================================================================
  // DATABASE SETTINGS
  // ---------------------------------------------------------------------------
  // Configure how migrate persists its state. When omitted, migrate uses an
  // SQLite database located at $XDG_CONFIG_HOME/migrate/migrate.db (or the
  // matching platform-specific config directory).
  "database": {
    // Only "sqlite" is supported at the moment. Leave blank to use the default.
    "engine": "sqlite",
    "sqlite": {
      // Optional path to the SQLite database file. When empty, migrate falls
      // back to $XDG_CONFIG_HOME/migrate/migrate.db.
      "path": ""
    }
  },

  // ===========================================================================
  // TEMPORAL (workflow engine) configuration
  // ---------------------------------------------------------------------------
  // Connection details for the Temporal server used to orchestrate migration
  // workflows. Temporal runs and tracks long-lived workflows such as move and
  // replication tasks. Point these values to a reachable Temporal deployment.
  "temporal": {
    // Namespace on the Temporal server (commonly "default" for local setups).
    "namespace": "default",
    // Host and port where the Temporal frontend is reachable (host:port).
    "address": "127.0.0.1:7233",
    // Task queue that workers poll for workflows and activity tasks.
    "task_queue": "default-task-queue"
  },

  // ===========================================================================
  // ARCHIVEMATICA STORAGE SERVICE (SS) SETTINGS
  // ---------------------------------------------------------------------------
  // All Storage Service options live under storage_service. The "api" block
  // configures HTTP access. The "management" block explains how to run the
  // Storage Service management commands (either inside Docker or on the host).
  // The "locations" block describes the Storage Service locations this tool
  // should operate on.
  "storage_service": {
    "api": {
      // Base URL of the Storage Service API.
      "url": "http://localhost:62081",
      // API credentials.
      "username": "test",
      "api_key": "test"
    },

    "management": {
      // Mode controls where management commands run: "docker" or "host".
      "mode": "docker",

      "docker": {
        // Name of the Storage Service container.
        "container": "am-archivematica-storage-service-1",
        // Path to manage.py inside the container.
        "manage_path": "/src/src/archivematica/storage_service/manage.py"
      },

      "host": {
        // Python interpreter used when running commands on the host.
        "python_path": "python3",
        // Path to manage.py on the host file system. Leave empty when only
        // running inside Docker.
        "manage_path": "/src/src/archivematica/storage_service/manage.py",
        // Additional environment variables for host executions.
        "environment": {
          "DJANGO_SETTINGS_MODULE": "archivematica.storage_service.storage_service.settings.local"
        }
      }
    },

    "locations": {
      // Identifier of the source location that holds the AIPs to be processed.
      "source_location_id": "source-location-uuid",
      // Identifier for the move target location (optional for replication-only flows).
      "move_target_location_id": "location-uuid",
      // Replication targets, each with an ID and human-readable name.
      "replication_targets": [
        {
          "id": "replica-location-1",
          "name": "Replica Location 1"
        }
      ]
    }
  }
}
